root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
end_of_line = lf
charset = utf-8

[*.{c,h,cpp,hpp}]
indent_size = 2

[{*.bat,*.cmd}]
end_of_line = crlf

[{*.yml,*.yaml,*.json}]
indent_size = 2

[{*.md,*.txt,*.rst}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4
